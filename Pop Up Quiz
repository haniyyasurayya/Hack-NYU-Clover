<body>
	<h1>Welcome to my website</h1>
	<p>Scroll up and down to take the quiz!</p>

	<!-- Add some content to make the page scrollable -->
	<div style="height: 1000px"></div>

	<div id="popup">
		<h2><center>BUDGETING</center></h2>
		<p><center>Which of the following is the best budgeting habit?</center></p>
		<form>
			<input type="radio" id="spend" name="habit" value="spend">
			<label for="spend">Spending your entire paycheck the day after</label><br>
			<input type="radio" id="allocate" name="habit" value="allocate">
			<label for="allocate">Allocating your paycheck for bills, living expenses, and disposable income</label><br>
			<input type="radio" id="review" name="habit" value="review">
			<label for="review">Review what you already spent your money on at the end of each month</label><br>
			<button type="button" onclick="checkAnswer()">Submit</button>
					<button type="button" onclick="hidePopup()">Close</button>
		</form>
		<p id="result"></p>
	</div>

	<script>
		// Set up variables
		var popup = document.getElementById("popup");
		var result = document.getElementById("result");

		// Function to show the popup
		function showPopup() {
			popup.style.display = "block";
		}

		// Function to hide the popup
		function hidePopup() {
			popup.style.display = "none";
		}

		// Function to check the user's answer
		function checkAnswer() {
			var answer = document.querySelector('input[name="habit"]:checked');
			if (answer && answer.value === "allocate") {
				result.innerHTML = "Correct!";
			} else {
				result.innerHTML = "Incorrect. Spending your entire paycheck the day after doesn’t allow for emergency funds that may be necessary when bills or expenses pop up all of a sudden. Reviewing what you already spent your money on at the end of the month only allows you to see how you allocated your money, but it didn’t help you avoid unnecessary spending. Allocating your paycheck before spending lets you set defined boundaries on where and how much to spend your money.";
			}
		}

		// Show the popup when the user scrolls down
		var lastScrollPosition = window.scrollY;
		window.addEventListener("scroll", function() {
			var currentScrollPosition = window.scrollY;
			var scrollDifference = currentScrollPosition - lastScrollPosition;
			if (scrollDifference > 0 && currentScrollPosition > 500 && currentScrollPosition < 800) {
				showPopup();
			} else if (scrollDifference < 0 && currentScrollPosition < 500 || currentScrollPosition > 800 || currentScrollPosition >= document.documentElement.scrollHeight - window.innerHeight) {
				hidePopup();
			}
			lastScrollPosition = currentScrollPosition;
		});
	</script>
</body>
</html>

